{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "dist/",
		"downlevelIteration": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*.ts", "./test/**/*.ts"]
}
