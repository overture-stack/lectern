        "codeList": {
          "anyOf": [
            {
              "type": "array",
              "minItems": 2,
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            { "type": "string", "pattern": "^#(\\/[-_A-Za-z0-9]+)+$" }
          ]
        },
        "required": {
          "type": "boolean"
        },
        "script": {
